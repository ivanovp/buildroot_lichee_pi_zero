auto wlan0
iface wlan0 inet dhcp
    pre-up killall -q wpa_supplicant; wpa_supplicant -B -Dnl80211 -iwlan0 -c/etc/wpa_supplicant.conf; wait_if wlan0
    post-down killall -q wpa_supplicant
    wait-delay 15

